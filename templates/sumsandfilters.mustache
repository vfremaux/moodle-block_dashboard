{{!
    @template block-dashboard/sumsandfilters

    Block template for graph output params form

    Classes required for JS:
    * none

}}
<!-- block_dashboard/sumsandfilters -->
<fieldset id="dashboardsettings-panel-sumsandfiltersparams" class="dashboardsettings-panel off">
<legend>{{strsumsandfilterparams}}</legend>

<table class="dashboard-setup">

    <tr valign="top">
        <td align="center" colspan="4">
                {{{strconfigreminderonsep}}}
        </td>
    </tr>
</table>

<h4>{{strfilters}}</h4>

<table class="dashboard-setup">
    <tr valign="top">
        <td align="right">
            <b>{{{strconfigfilters}}}: {{{helpiconconfigfilters}}}</b>
        </td>
        <td>
            <input type="text" name="filters" size="40" value="{{{filters}}}" />
        </td>

        <td align="right" rowspan="3">
            <b>{{{strconfigfilterlabels}}}:</b>
        </td>

        <td rowspan="3">
            <textarea name="filterlabels" cols="30" rows="5" >{{{filterlabels}}}</textarea>
        </td>
    </tr>

    <tr valign="top">
        <td align="right">
            <b>{{{strconfigfilterdefaults}}}: {{{helpiconconfigfilterdefaults}}}</b>
        </td>

        <td>
            <input type="text" name="filterdefaults" size="30" value="{{{filterdefaults}}}" />
        </td>
    </tr>

    <tr valign="top">
        <td align="right">
            <b>{{{strconfigfilteroptions}}}: {{{helpiconconfigfilteroptions}}}</b>
        </td>

        <td>
            <input type="text" name="filteroptions" size="30" value="{{{filteroptions}}}" />
        </td>
    </tr>
</table>

<h4>{{strsums}}</h4>

<table class="dashboard-setup">

    <tr valign="top">

        <td align="right">
            <b>{{{strconfignumsums}}}: {{{helpiconconfigsummators}}}</b>
        </td>

        <td>
            <input type="text" name="numsums" size="30" value="{{numsums}}" />
        </td>
    </tr>

    <tr valign="top">

        <td align="right">
            <b>{{{strconfignumsumsformats}}}: {{{helpiconconfigformatting}}}</b>
        </td>

        <td>
            <input type="text" name="numsumformats" size="30" value="{{numsumformats}}" />
        </td>
    </tr>

    <tr valign="top">

        <td align="right">
            <b>{{{strconfignumsumslabels}}}:</b>
        </td>

        <td>
            <textarea name="numsumlabels" cols="30" rows="5" >{{{numsumlabels}}}</textarea>
        </td>
    </tr>

</table>
</fieldset>
<!-- /block_dashboard/sumsandfilters -->