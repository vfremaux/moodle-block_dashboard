{{!
    @template block-dashboard/queryparams

    Block template for query description form

    Classes required for JS:
    * none

}}
<!-- block_dashboard/queryparams -->
<fieldset id="dashboardsettings-panel-queryparams" class="dashboardsettings-panel off">
<legend>{{strqueryparams}}</legend>
<table class="dashboard-setup">

    <tr valign="top">
        <td align="center" colspan="4">
        {{strconfigparams}}
        </td>
    </tr>

    <tr valign="top">
        <td align="right" width="25%">
        <b>{{strsqlparamvar}}</b>
        </td>

        <td align="right" width="25%">
        <b>{{strsqlparamlabel}}</b>
        </td>

        <td align="right" width="25%">
        <b>{{strsqlparamtype}}</b>
        </td>

        <td align="right" width="25%">
        <b>{{strsqlparamvalues}}<br/>{{strsqlparamdefault}}</b>
        </td>
    </tr>

{{#params}}
    <tr valign="top">
    <td align="right" width="25%">
        <input type="text" size="20" name="{{varkey}}" value="{{varkeyvalue}}" /><br/>
        {{{strparamas}}}
        <input type="radio" name="{{asvarkey}}" value="sql" {{{sqlchecked}}} /> {{{strassql}}},
        <input type="radio" name="{{asvarkey}}" value="variable" {{{varchecked}}} /> {{{strasvar}}} ou
        <input type="radio" name="{{asvarkey}}" value="outputcol" {{{colchecked}}} /> {{{strascol}}}
    </td>

    <td align="right" width="25%">
        <input type="text" size="20" name="{{labelkey}}" value="{{labelkeyvalue}}" />
    </td>

    <td align="right" width="25%">
        {{{typeselect}}}
    </td>

    <td align="right" width="25%">
        <textarea name="{{valueskey}}" rows="5" cols="30">{{valueskeyvalue}}</textarea><br/>
        <input type="text" size="20" name="{{defaultkey}}" value="{{defaultkeyvalue}}" />
    </td>
    </tr>
{{/params}}

</table>
</fieldset>
<!-- /block_dashboard/queryparams -->
