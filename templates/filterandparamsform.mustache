{{!
    @template block-dashboard/filterandparamsform

    Block template for outputing filters and params on results

    Classes required for JS:
    * none

}}
<!-- block_dashboard/filterandparamsform -->
<form class="dashboard-filter-form" id="dashboard-form-{{blockid}}" name="dashboardform{{blockid}}" method="GET">
    <input type="hidden" name="id" value="{{courseid}}" />

{{#inblocklayout}}
    <input type="hidden" name="blockid" value="{{blockidparam}}" />
{{/inblocklayout}}

{{^inblocklayout}}
    <input type="hidden" name="blockid" value="{{blockid}}" />
{{/inblocklayout}}

{{#ispageformatpage}}
        <input type="hidden" name="page" value="{{pageid}}" />
{{/ispageformatpage}}

    <input type="hidden" name="tsort{{blockid}}" value="{{sort}}" />

    {{> block_dashboard/filters }}

    {{{params}}}

    {{#autosubmit}}
        <span id="dashboard-auto-{{blockid}}" class="dashboard-filter-autosubmit"></span>
    {{/autosubmit}}
    {{^autosubmit}}
        <input type="button" id="dashboard-filter-submit-{{blockid}}" name="filtersubmit{{blockid}}_" class="dashboard-filter-submitters" value="{{strdofilter}}" />
    {{/autosubmit}}

</form>
<!-- /block_dashboard/filterandparamsform -->