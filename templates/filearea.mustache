{{!
    @template block-dashboard/filearea

    Showing the generated files filearea content.

    Classes required for JS:
    * none

}}
<!-- block_dashboard/filearea -->
<div class="filebrowser">

<div class="path">
    {{{breadcrumb}}}
</div>

<div class="block-dashboard-entrylist">

{{{strnofiles}}}

{{^strnofiles}}
<table width="90%">

{{#exportdirs}}
    <tr>
        <td>
            <img src="{{nodeiconurl}}">
        </td>
        <td>
            <a href="{{url}}">{{name}}</a>
        </td>
        <td>
        </td>
    </tr>
{{/exportdirs}}

{{#exportfiles}}
    <tr>
        <td>
            <img src="{{nodeiconurl}}">
        </td>

        <td>
            <a href="{{url}}">{{name}}</a>
        </td>

        <td align="right">
            {{filedate}}
        </td>
    </tr>
{{/exportfiles}}

</table>
{{/strnofiles}}

</div>
</div>
<!-- /block_dashboard/filearea -->