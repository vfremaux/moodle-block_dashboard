{{!
    @template block-dashboard/dashboard

    Block template for main block content output

    Classes required for JS:
    * none

}}
<!-- block_dashboard/dashboard -->
<div class="dashboard-panel">

    {{{dhtmlxcalendarstyle}}}

    {{#errormsg}}
       {{{errormsg}}}
    {{/errormsg}}
    {{^errormsg}}
        {{{warningmsg}}}
    {{/errormsg}}

    {{#description}}
    <div class="block-dashboard-description">{{{description}}}</div>
    {{/description}}

    {{{debug}}}

    {{{filterandparams}}}

    {{^errormsg}}
    {{{data}}}
    {{/errormsg}}

    {{{summators}}}

    {{#graph}}
    <div class="dashboard-graph-box">
      {{{graph}}}
    </div>
    {{/graph}}

    {{{controlbuttons}}}

    {{#query}}
    <div class="dashboard-query-box">
        <pre>{{{query}}}</pre>
    </div>
    {{/query}}

    {{#filterqueries}}
    <div class="dashboard-filter-query-box">
        <pre>{{{filterqueries}}}</pre>
    </div>
    {{/filterqueries}}

    {{#benches}}
    <div class="dashboard-benches-box">
    <table width="100%" class="dashboard-benches">
    {{#benchrows}}
        <tr>
            <td class="param">{{name}}</td>
            <td class="value">{{value}} sec</td>
        </tr>
    {{/benchrows}}
    </table>
    </div>
    {{/benches}}
</div>
<!-- /block_dashboard/dashboard -->