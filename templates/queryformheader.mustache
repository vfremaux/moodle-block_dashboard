{{!
    @template block-dashboard/queryformheader

    template for query description form heading part

    Classes required for JS:
    * none

}}
<!-- block_dashboard/queryformheader -->
<table class="dashboard-setup">
    <tr valign="top">
        <td align="right">
            <b>{{{strconfigtitle}}}:</b>
        </td>

        <td>
            <input type="text" name="title" size="60" value="{{{theblocktitle}}}" />
        </td>
    </tr>

    <tr>
        <td align="right">
            <b>{{{strconfighidetitle}}}:</b>
        </td>

        <td>
            <input type="checkbox" name="hidetitle" {{{hidetitlestate}}} /> {{{strchecktohide}}}
        </td>
    </tr>
</table>
<!-- /block_dashboard/queryformheader -->
